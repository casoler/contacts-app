<h2>Create a New Contact</h2>

<%= form_tag '/contacts', method: :post do %>
  <div class="form-group">
    <%= label_tag :first_name, 'First Name' %>
    <%= text_field_tag :first_name, '', class:"form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :middle_name, 'Middle Name' %>
    <%= text_field_tag :middle_name, '', class:"form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :last_name, 'Last Name' %>
    <%= text_field_tag :last_name, '', class:"form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :address, 'Address' %>
    <%= text_field_tag :address, '', class:"form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :email, 'Email' %>
    <%= text_field_tag :email, '', class:"form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :phone_number, 'Phone Number' %>
    <%= text_field_tag :phone_number, '', class:"form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :bio, 'Bio' %>
    <%= text_area_tag :bio, '', class:"form-control" %>
  </div>

  <%= submit_tag 'Create a New Contact', class:"btn btn-default" %>
<% end %>




